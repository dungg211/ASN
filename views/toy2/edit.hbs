
<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/toy2/edit/{{toys2._id}}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit toy</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Toy name</label>
         <input class="form-control" type="text" name="name" value={{ toys2.name }} >
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Toy price</label>
         <input class="form-control" type="text" name="Price" value={{ toys2.Price }} >
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Toy category</label>
         <input class="form-control" type="text" name="category" value={{ toys2.category }} >
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Toy quantity</label>
         <input class="form-control" type="number" name="quantity" value={{ toys2.quantity }}  >
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Toy picture</label><br>
         <img src="{{ toys2.pic }}" width="150" height="200">
         <input class="form-control" type="text" name="pic" value={{ toys2.pic }} >
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="edit">
      </div>
</form>     
</div>

