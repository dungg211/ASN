<div class="container text-center">
   {{!-- table.table.table-bordered>tr*3>th*7 --}}
   <table class="table bordered">
      <tr>
         <th class="h2 text text-success" colspan="6">Toy LIST</th>
         <th>
            <a class="btn btn-outline-dark" href="/toy/add">Add Toy</a>
         </th>
      </tr>
      <tr>
         <th>name</th>
         <th>price</th>
         <th>category</th>
         <th>quantity</th>
         <th>video</th>
         <th>picture</th>
      </tr>
      {{!-- heach --}}
      {{#each toys }}
      <tr>
         <th>{{ name }}</th>
         <th>{{ Price }}</th>
         <th>{{ category }}</th>
         <th>{{ quantity }}</th>
         <th><iframe src=" https://www.youtube.com/embed/{{ video }}" width="300" height="200"></iframe></th>

         <th>
            <img src="{{ pic }}" width="200" height="250">
         </th>
         <th>
            <a class="btn btn-outline-secondary" href="/toy/edit/{{_id}}">edit</a>
            <a class="btn btn-outline-info" href="/toy/delete/{{_id}}"
               onclick="return confirm('Do you want to delete this movie ?');">Delete</a>
         </th>
      </tr>
      {{/each}}
   </table>
</div>




















